<h1>Listing resources</h1>

<table>
  <tr>
    <th>Resource type</th>
    <th>Make</th>
    <th>Model</th>
    <th>Purchased at</th>
    <th>Serial number</th>
    <th>Location</th>
    <th>User names</th>
    <th>Salvage</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.resource_type %></td>
    <td><%= resource.make %></td>
    <td><%= resource.model %></td>
    <td><%= resource.purchased_at %></td>
    <td><%= resource.serial_number %></td>
    <td><%= resource.location_id %></td>
    <td><%= resource.user_names %></td>
    <td><%= resource.salvage %></td>
    <td><%= resource.value %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

